<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="it.unibo.paw.hibernate.Materiale_Fisico" table="Materiale">
		<!-- Mappiamo l'ID -->
		<id name="id" column="idMateriale"/>
		
		<!-- Mappiamo le proprietÃ  -->
		<property name="codiceMateriale" column="codiceMateriale" />
		<property name="nome" column="nome" />
		<property name="descrizione" column="descrizione" />
		<property name="dataCreazione" column="dataCreazione" />
		<property name="idArchivio" column="idArchivio" />
		
		<!-- Mappiamo le relazioni (sclegli tra opzioni) : -->

		<!-- OPZIONE 2: 1-M -->
		<set name="oggetti" table="Oggetto" inverse="true" lazy="true" fetch="select">
			<key column="idMateriale" not-null="false"/>
			<one-to-many class="it.unibo.paw.hibernate.Oggetto_Digitale"/>
		</set>

	</class>
</hibernate-mapping>