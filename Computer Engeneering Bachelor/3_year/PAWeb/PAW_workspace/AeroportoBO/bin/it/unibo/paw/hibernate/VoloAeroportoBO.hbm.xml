<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="it.unibo.paw.hibernate.VoloAeroportoBO" table="VoloAeroportoBO">
		<!-- Mappiamo l'ID -->
		<id name="id" column="id"/>
		
		<!-- Mappiamo le proprietÃ  -->
		<property name="codVolo" column="codVolo" />
		<property name="compagniaAerea" column="compagniaAerea" />
		<property name="localitaDestinazione" column="localitaDestinazione" />
		<property name="dataPartenza" column="dataPartenza" />
		<property name="orarioPartenza" column="orarioPartenza" />
		
		<!-- Mappiamo le relazioni (sclegli tra opzioni) : -->
		<!-- OPZIONE 3: N-M -->
		<set name="passeggeri" table="PV" lazy="true" fetch="select" cascade="all">
			<key column="idVolo" not-null="false"/>
			<many-to-many column="idPasseggero" class="it.unibo.paw.hibernate.Passeggero"/>
		</set>

	</class>
</hibernate-mapping>