package it.unibo.paw.dao;


import java.util.Calendar;
import java.util.List;

public class DAOTest {
	
	public static final int DAO = DAOFactory.DB2;
	
	public static void main(String[] args) {
		
		// Creo istanza DAO
		DAOFactory daoFactoryInstance = DAOFactory.getDAOFactory(DAO);
		
		// Creo database
		Squadra_PallacanestroDAO sDAO = daoFactoryInstance.getSquadra_PallacanestroDAO();
		sDAO.dropTable();
		sDAO.createTable();
		
		// Creo i DTO e li inserico
		Squadra_PallacanestroDTO s = new Squadra_PallacanestroDTO();
		s.setNome("Bologna");
		s.setTorneo("Torneo 1");
		s.setAllenatore("Andrea");
		sDAO.create(s);

		s.setNome("Milano");
		s.setTorneo("Torneo 1");
		s.setAllenatore("Lorenzo");
		sDAO.create(s);

		s.setNome("Torino");
		s.setTorneo("Torneo 2");
		s.setAllenatore("Alessandro");
		sDAO.create(s);
		
		s.setNome("Genova");
		s.setTorneo("Torneo 3");
		s.setAllenatore("Poerpaolo");
		sDAO.create(s);
		
		// Creo altro Database
		GiocatoreDAO gDAO = daoFactoryInstance.getGiocatoreDAO();
		gDAO.dropTable();
		gDAO.createTable();
		
		// Creo altri DTO e li inserisco
		GiocatoreDTO g = new GiocatoreDTO();
		g.setNome("Lorenzo");
		g.setCognome("Pellegrino");
		g.setCodiceFiscale("Code 1");
		g.setEta(22);
		gDAO.create(g);
		
		g.setNome("Riccardo");
		g.setCognome("Pellegrino");
		g.setCodiceFiscale("Code 2");
		g.setEta(18);
		gDAO.create(g);
		
		g.setNome("Alessandro");
		g.setCognome("Pellegrino");
		g.setCodiceFiscale("Code 3");
		g.setEta(55);
		gDAO.create(g);
		
		g.setNome("Katia");
		g.setCognome("Mascagni");
		g.setCodiceFiscale("Code 4");
		g.setEta(50);
		gDAO.create(g);

		course = new CourseDTO();
		course.setId(2);
		course.setName("Fondamenti di Informatica T1");
		courseDAO.create(course);
				
		
		// Creo altro database (mapping)
		CourseStudentMappingDAO mappingDAO = daoFactoryInstance.getStudentCourseMappingDAO();
		mappingDAO.dropTable();
		mappingDAO.createTable();

		// Compilo tabella
		mappingDAO.create(1, 1);
		mappingDAO.create(1, 2);
		mappingDAO.create(2, 2);
		
		// Faccio richieste ed analizzo i risultati
		StudentDTO student = studentDAO.read(1);
		System.out.println(student.getFirstName()+" "+student.getLastName()+" frequenta i seguenti corsi:");
		List<CourseDTO> corsiDiStudent = student.getCourses();
		for(CourseDTO cds : corsiDiStudent)
		{
			System.out.println(""+cds.getId()+" "+cds.getName());
		}
		System.out.println();
		
		CourseDTO paw = courseDAO.read(1);
		System.out.println("Il corso "+paw.getName()+" ï¿½ frequentato da:");
		List<StudentDTO> sdc = paw.getStudents();
		for(StudentDTO stu : sdc){
			
			System.out.println(""+stu.getFirstName()+" "+stu.getLastName()+" "+stu.getBirthDate());;
		}
		System.out.println();
		System.out.println();
	}

}
