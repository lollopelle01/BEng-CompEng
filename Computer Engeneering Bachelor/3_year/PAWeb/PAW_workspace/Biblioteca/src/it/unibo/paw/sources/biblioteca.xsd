<?xml version="1.0" encoding="utf-8" ?>

<!-- SCALETTA SCRITTURA SCHEMA -->
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
	<xs:simpleType name="lunghezza">
		<xs:restriction base="xs:string">
			<xs:pattern value="[0-9]+\:[0-9]+"/>
		</xs:restriction>
	</xs:simpleType>

	<xs:complexType name="brano">
		<xs:sequence>
			<xs:element name="titoloBrano" type="xs:string"/>
			<xs:element name="lunghezza" type="lunghezza"/>
		</xs:sequence>
	</xs:complexType>
	
	<xs:complexType name="album">
		<xs:sequence>
			<xs:element name="titoloAlbum" type="xs:string"/>
			<xs:element name="anno" type="xs:integer"/>
			<xs:element name="brano" type="brano" minOccurs="0" maxOccurs="unbounded"/>
		</xs:sequence>
	</xs:complexType>

    <xs:complexType name="musicista">
		<xs:sequence>
			<xs:element name="nome" type="xs:string"/>
			<xs:element name="cognome" type="xs:string"/>
			<xs:element name="nomeArte" type="xs:string" minOccurs="0"/>
			<xs:element name="genere" type="xs:string"/>
			<xs:element name="album" type="album" minOccurs="0" maxOccurs="unbounded"/>
		</xs:sequence>
	</xs:complexType>

	<!-- Definizione per istanza finale -->
	<xs:complexType name="biblioteca">
		<xs:sequence>
			<xs:element name="musicista" type="musicista" minOccurs="0" maxOccurs="unbounded"/>
		</xs:sequence>
	</xs:complexType>

	<!-- Istanza finale -->
	<xs:element name="biblioteca" type="biblioteca"/>
</xs:schema>