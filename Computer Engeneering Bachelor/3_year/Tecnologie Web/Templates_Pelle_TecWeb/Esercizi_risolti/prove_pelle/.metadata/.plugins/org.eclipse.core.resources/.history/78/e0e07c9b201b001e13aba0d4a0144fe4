'use strict';

class Configurazione extends React.Component {
    constructor(props) {
        super(props)

        this.generateMatrix = this.generateMatrix.bind(this);
    }

    generateMatrix() {
        let altezza = $("#altezza").val();
        let lunghezza = $("#lunghezza").val();

        if(isNaN(altezza) || parseInt(altezza) < 5){
            $("#altezza").val("");
            return;
        }

        if(isNaN(lunghezza) || parseInt(lunghezza) < 5) {
            $("#lunghezza").val("");
            return;
        }

        if(altezza == "" || lunghezza == "")
            return;

        this.props.generate({h : altezza, l : lunghezza})
    }

    render() {
        return(<div>
            <table>
                <tr>
                    <td><label>Altezza griglia</label></td>
                    <td><label>Lunghezza griglia</label></td>
                </tr>
                <tr>
                    <td><input type="text" id="altezza" placeholder="Altezza (a > 5)" onChange={this.generateMatrix}></input></td>
                    <td><input type="text" id="larghezza" placeholder="Larghezza (l > 5)" onChange={this.generateMatrix}></input></td>
                    // <td><input type="text" id="mines-num" placeholder="Mine n (n < d^2)" onChange={this.generateMatrix}></input></td>
                </tr>
            </table>
        </div>);
    }
}