<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="esame.hibernate.beans.Paziente" table="paziente">
		<id name="id" column="id">
			<generator class="native"></generator>
		</id>
		<property name="codicefiscale" column="codicefiscale" unique="true" />
		<property name="nome" column="nome"/>
		<property name="cognome" column="cognome"/>
		<property name="sesso" column="sesso"/>
		<set name="richiesteMediche" table="richiestamedica">
			<!-- colonna dell'altra tabella che referenzia questo bean -->
			<key column="codicepaziente"></key>
			<one-to-many class="esame.hibernate.beans.RichiestaMedica"/>
		</set>
	</class>
</hibernate-mapping>