<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="it.unibo.tw.es3.beans.Partecipante" table="partecipante">
		<id name="id" column="id">
			<generator class="native"></generator>
		</id>
		<property name="nickName" column="nickName"></property>
		<property name="nome" column="nome"></property>
		<property name="cognome" column="cognome" unique="true" not-null="true"></property>
		<property name="eta" column="eta"></property>
		
        <set name="parties" table="party_partecipante" inverse="true">
        	<!-- colonna della tabella di mapping che referenzia questo bean -->
			<key column="idPartecipante" />
			<!-- colonna della tabella di mapping che referenzia l'altro bean -->
			<many-to-many column="idParty" class="esame.hibernate.beans.Due" lazy="false" fetch="select"/>
			<!-- fetch="select|subselect|join|batch" con select è lazy di default, con join è eager di default -->
		</set>
		
		<set name="tres" table="tre">
			<!-- colonna dell'altra tabella che referenzia questo bean -->
			<key column="due_id"></key>
			<one-to-many class="esame.hibernate.beans.Tre"/>
		</set>
	
		<!-- name=attributo java, class=classe dell'altra tabella, column=colonna della mia tabella" -->
		<many-to-one name="due" class="esame.hibernate.beans.Due" column="due_id" not-null="true"/>
		
		<composite-id>
			<key-property name="productId" column="pid"  />
			<key-property name="proName" column="pname" length="10" />
		</composite-id>
		
		<composite-id>
        	<key-many-to-one name="person" column="personName"/>
        	<key-property name="type" column="addressType"/>
    	</composite-id>
    	
    	<properties name="uk1" unique="true">
        	<property name="username" column="username" />
        	<many-to-one name="due" class="esame.hibernate.beans.Due" column="due_id" not-null="true"/>
		</properties>
    	
    </class>
</hibernate-mapping>

