<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="esame.hibernate.beans.RichiestaMedica" table="richiestamedica">
		<id name="id" column="id">
			<generator class="native"></generator>
		</id>
		<property name="nomemedico" column="nomemedico"/>
		
		<set name="accertamenti" table="accertamento">
			<!-- colonna dell'altra tabella che referenzia questo bean -->
			<key column="richiestamedica"></key>
			<one-to-many class="esame.hibernate.beans.Accertamento"/>
		</set>
		
		<properties name="uk1" unique="true">
			<property name="data" column="data"/>
			<many-to-one name="paziente" class="esame.hibernate.beans.Paziente" column="codicepaziente" not-null="true"/>
		</properties>
		
	</class>
</hibernate-mapping>