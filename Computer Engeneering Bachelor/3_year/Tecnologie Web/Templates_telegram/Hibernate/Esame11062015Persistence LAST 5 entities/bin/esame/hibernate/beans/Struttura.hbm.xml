<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="esame.hibernate.beans.Struttura" table="struttura">
		<id name="id" column="id">
			<generator class="native"></generator>
		</id>
		<property name="codice" column="codice" unique="true"/>
		<property name="nome" column="nome"/>
		<property name="indirizzo" column="indirizzo"/>
		<set name="tipiaccertamento" table="tipoaccertamento_struttura">
        	<!-- colonna della tabella di mapping che referenzia questo bean -->
			<key column="idstruttura" />
			<!-- colonna della tabella di mapping che referenzia l'altro bean -->
			<many-to-many column="idtipoaccertamento" class="esame.hibernate.beans.TipoAccertamento"/>
			<!-- fetch="select|subselect|join|batch" con select è lazy di default, con join è eager di default -->
		</set>
	</class>
</hibernate-mapping>