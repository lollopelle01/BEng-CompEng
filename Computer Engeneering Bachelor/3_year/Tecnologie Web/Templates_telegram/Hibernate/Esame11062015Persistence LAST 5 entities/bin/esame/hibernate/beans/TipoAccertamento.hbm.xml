<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="esame.hibernate.beans.TipoAccertamento" table="tipoaccertamento">
		<id name="id" column="id">
			<generator class="native"></generator>
		</id>
		<property name="codice" column="codice" unique="true"/>
		<property name="descrizione" column="descrizione"/>
		<set name="accertamenti" table="accertamento">
			<!-- colonna dell'altra tabella che referenzia questo bean -->
			<key column="tipoaccertamento"></key>
			<one-to-many class="esame.hibernate.beans.Accertamento"/>
		</set>
		<set name="strutture" table="tipoaccertamento_struttura" inverse="true">
        	<!-- colonna della tabella di mapping che referenzia questo bean -->
			<key column="idtipoaccertamento" />
			<!-- colonna della tabella di mapping che referenzia l'altro bean -->
			<many-to-many column="idstruttura" class="esame.hibernate.beans.Struttura" />
			<!-- fetch="select|subselect|join|batch" con select è lazy di default, con join è eager di default -->
		</set>
	</class>
</hibernate-mapping>