<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="esame.hibernate.beans.MaterialeFisico" table="materialefisico">
		<id name="id" column="id">
			<generator class="native"></generator>
		</id>
		<property name="codiceMateriale" column="codiceMateriale" unique="true" not-null="true"/>
		<property name="nome" column="nome"/>
		<property name="descrizione" column="descrizione"/>
		<property name="dataCreazione" column="dataCreazione"/>
		<set name="oggettiDigitali" table="oggettodigitale">
			<!-- colonna dell'altra tabella che referenzia questo bean -->
			<key column="materialefisico"></key>
			<one-to-many class="esame.hibernate.beans.OggettoDigitale"/>
		</set>
	</class>
</hibernate-mapping>