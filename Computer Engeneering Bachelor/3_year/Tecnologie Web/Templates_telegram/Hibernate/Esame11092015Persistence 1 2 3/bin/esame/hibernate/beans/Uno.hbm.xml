<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="esame.hibernate.beans.Uno" table="uno">
		<id name="id" column="id">
			<generator class="native"></generator>
		</id>
		<property name="uno1" column="uno1"/>
		<property name="uno2" column="uno2"/>
		<set name="dues" table="uno_due" inverse="true">
        	<!-- colonna della tabella di mapping che referenzia questo bean -->
			<key column="iduno" />
			<!-- colonna della tabella di mapping che referenzia l'altro bean -->
			<many-to-many column="iddue" class="esame.hibernate.beans.Due"/>
		</set>
	</class>
</hibernate-mapping>