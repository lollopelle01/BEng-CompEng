<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="esame.hibernate.beans.Tre" table="tre">
		<id name="id" column="id">
			<generator class="native"></generator>
		</id>
		<property name="tre1" column="tre1"/>
		<property name="tre2" column="tre2"/>
		<!-- name=attributo java, class=classe dell'altra tabella, column=colonna della mia tabella" -->
		<many-to-one name="due" class="esame.hibernate.beans.Due" column="iddue" not-null="true"/>
	</class>
</hibernate-mapping>