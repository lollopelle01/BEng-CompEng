<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="it.unibo.paw.hibernate.WorkPackage" table="WP">
		<!-- Mappiamo l'ID -->
		<id name="id" column="id"/>
		
		<!-- Mappiamo le proprietÃ  -->
		<property name="nomeWP" column="nomeWP" />
		<property name="titolo" column="titolo" />
		<property name="descrizione" column="descrizione" />
		
		<!-- Mappiamo le relazioni (sclegli tra opzioni) : -->
		<!-- OPZIONE 1: M-1 -->
		<many-to-one name="progetto" class="it.unibo.paw.hibernate.Progetto" fetch="select">
			<column name="idProgetto" not-null="false" />
		</many-to-one>
		
		<!-- OPZIONE 3: N-M -->
		<set name="partners" table="WP_P" fetch="select" cascade="all">
			<key column="idWP" not-null="false"/>
			<many-to-many column="idPartner" class="it.unibo.paw.hibernate.Partner"/>
		</set>

	</class>
</hibernate-mapping>