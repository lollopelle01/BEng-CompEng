<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="it.unibo.paw.hibernate.Progetto" table="Progetto">
		<!-- Mappiamo l'ID -->
		<id name="id" column="id"/>
		
		<!-- Mappiamo le proprietÃ  -->
		<property name="codPorgetto" column="codiceProgetto" />
		<property name="nomeProgetto" column="nomeProgetto" />
		<property name="annoInizio" column="annoInizio" />
		<property name="durata" column="durata" />
		
		<!-- Mappiamo le relazioni (sclegli tra opzioni) : -->
		<!-- OPZIONE 2: 1-M -->
		<set name="workPackages" table="WP" inverse="true" fetch="select">
			<key column="idProgetto" not-null="false"/>
			<one-to-many class="it.unibo.paw.hibernate.WorkPackage"/>
		</set>

	</class>
</hibernate-mapping>