package it.unibo.paw.dao.db2;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.Statement;
import java.util.ArrayList;
import java.util.HashSet;
import java.util.List;
import java.util.Set;

import it.unibo.paw.dao.*; // si può fare anche selezione più specifica

public class Db2IdBroker {

	public int newId() throws Exception{
		int newId = -1;
		Connection conn = Db2DAOFactory.createConnection();
		try {
			String q = "SELECT(NEXTVAL FOR sequenza_id) INTO newId";
			PreparedStatement prep_stmt = conn.prepareStatement(q);
			prep_stmt.clearParameters();
			prep_stmt.executeUpdate();
			ResultSet result = prep_stmt.executeQuery();
			prep_stmt.close();
			if (result.next()) newId = result.getInt("newId");
			else throw new Exception("invalid id");
		} catch (Exception e) {
			System.err.println("delete(): failed to delete entry with id = " + id + ": " + e.getMessage());
			e.printStackTrace();
		} finally {
			Db2DAOFactory.closeConnection(conn);
		}
		return newId;
	}

}
