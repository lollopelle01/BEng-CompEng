<?xml version="1.0" encoding="ISO-8859-1"?>

<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
    version="2.4">

    <display-name>TW15-01-20</display-name>
    <description>
      An empty project to use as a template for your own ones
    </description>

    <!-- Define servlets that are included in the application -->

	<servlet>
		<servlet-name>Login</servlet-name>
		<servlet-class>it.unibo.tw.web.servlets.Login</servlet-class>
	</servlet>
	
	<servlet-mapping>
	 	<servlet-name>Login</servlet-name>
	 	<url-pattern>/login</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>Registrazione</servlet-name>
		<servlet-class>it.unibo.tw.web.servlets.Registrazione</servlet-class>
	</servlet>
	
	<servlet-mapping>
	 	<servlet-name>Registrazione</servlet-name>
	 	<url-pattern>/registrazione</url-pattern>
	</servlet-mapping>
	
	<!-- Welcome pages -->
	<!-- pleonastico: tomcat "tenta" in automatico le index.html e index.jsp -->

	<welcome-file-list>
		<welcome-file>/index.jsp</welcome-file>
		<welcome-file>/admin.jsp</welcome-file>
	</welcome-file-list>
		
	<!-- Handle exceptions and errors -->
	
	<error-page>
		<error-code>404</error-code>
		<location>/errors/notfound.html</location>
	</error-page>

	<error-page>
		<exception-type>javax.servlet.ServletException</exception-type>
		<location>/errors/failure.jsp</location>
	</error-page>

</web-app>
