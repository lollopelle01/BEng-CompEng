'use strict';

class Gioco extends React.Component {
    constructor(props) {
        super(props)
    }

    render() {
        return(<div>
            <table width="300" height="300" className="grid">
            	// Andiamo a mettere per ogni cella della tabella un oggetto Cella
                {this.props.grid.map(row => <tr> {row.map(cell => <Cell flower={cell} play={this.props.play}/>)} </tr>)}
            </table>
        </div>);
    }
}