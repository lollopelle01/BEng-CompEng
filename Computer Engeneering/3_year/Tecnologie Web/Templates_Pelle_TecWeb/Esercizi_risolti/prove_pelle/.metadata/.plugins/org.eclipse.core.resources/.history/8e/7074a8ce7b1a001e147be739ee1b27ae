package beans;

import java.util.ArrayList;
import java.util.Map;

public class Tabellone {
	private Map<Integer, ArrayList<Tennista>> database;

	public Tabellone() {
		super();
	}

	public Map<Integer, ArrayList<Tennista>> getDatabase() {
		return database;
	}

	public void setDatabase(Map<Integer, ArrayList<Tennista>> database) {
		this.database = database;
	}
	
	public ArrayList<Tennista> getTennisti(Tennista t) {
		ArrayList<Tennista> result = new ArrayList<Tennista>();
		
		for (int parte : this.database.keySet()) {
			if(this.database.get(parte).contains(t)) {return this.database.get(parte);}
		}
		return result; 
	}
	
	
}
