<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="it.unibo.paw.hibernate.Partner" table="Partner">
		<!-- Mappiamo l'ID -->
		<id name="id" column="id"/>
		
		<!-- Mappiamo le proprietÃ  -->
		<property name="siglaPartner" column="siglaPartner" />
		<property name="nome" column="nome" />
		
		<!-- Mappiamo le relazioni (sclegli tra opzioni) : -->
		<!-- OPZIONE 3: N-M -->
		<set name="workPackages" table="WP_P" fetch="select" cascade="all">
			<key column="idPartner" not-null="false"/>
			<many-to-many column="idWP" class="it.unibo.paw.hibernate.WorkPackage"/>
		</set>

	</class>
</hibernate-mapping>