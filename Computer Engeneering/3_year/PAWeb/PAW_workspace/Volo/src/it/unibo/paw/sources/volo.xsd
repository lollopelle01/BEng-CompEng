<?xml version="1.0" encoding="utf-8" ?>

<!-- SCALETTA SCRITTURA SCHEMA -->
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
	<!-- Definzione sottotipo1 -->
	<xs:simpleType name="tipo_volo">
		<xs:restriction base="xs:string">
			<xs:enumeration value="Andata-Ritorno"/>
			<xs:enumeration value="Solo-Andata"/>
		</xs:restriction>
	</xs:simpleType>

	<!-- Definzione sottotipo2 -->
    <xs:complexType name="prenotazione">
		<xs:sequence>
			<xs:element name="codice" type="xs:string"/>
			<xs:element name="compagnia" type="xs:string"/>
			<xs:element name="tipo_volo" type="tipo_volo"/>
			<xs:element name="aeroporto_partenza" type="xs:string"/>
			<xs:element name="dataOra_partenza" type="xs:dateTime"/>
			<xs:element name="aeroporto_arrivo" type="xs:string"/>
			<xs:element name="dataOra_arrivo" type="xs:dateTime"/>
		</xs:sequence>
	</xs:complexType>

	<!-- Definizione per istanza finale -->
	<xs:complexType name="cliente">
		<xs:sequence>
			<xs:element name="nome" type="xs:string"/>
			<xs:element name="cognome" type="xs:string"/>
			<xs:element name="passaporto" type="xs:integer"/>
			<xs:element name="prenotazione" type="prenotazione" minOccurs="0" maxOccurs="unbounded"/>
		</xs:sequence>
	</xs:complexType>
	
    <xs:complexType name="archivio">
		<xs:sequence>
			<xs:element name="cliente" type="cliente" maxOccurs="unbounded"/>
		</xs:sequence>
	</xs:complexType>
	

	<!-- Istanza finale -->
	<xs:element name="archivio" type="archivio"/>
</xs:schema>